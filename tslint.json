{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules",
      "config",
      "*.js"
    ]
  },
  "jsRules": {},
  "rules": {
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "max-line-length": [
      true,
      150
    ],
    "no-bitwise": true,
    "no-empty": false,
    "no-namespace": false,
    "object-literal-sort-keys": false,
    "only-arrow-functions": [
      true,
      "allow-declarations",
      "allow-named-functions"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef": [
      true,
      "call-signature"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-preblock",
      "check-rest-spread",
      "check-separator",
      "check-type",
      "check-typecast",
      "check-type-operator"
    ]
  }
}
